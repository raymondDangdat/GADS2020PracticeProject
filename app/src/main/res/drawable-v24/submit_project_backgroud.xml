<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/white" android:endColor="@color/colorAccent" android:angle="45"
                android:centerColor="@color/colorAccent"
                />
            <corners android:radius="@dimen/bg_corner_radius"/>
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="true">
        <shape android:shape="rectangle" >
            <gradient android:startColor="@color/grey_black" android:centerColor="@color/grey_black" android:endColor="@color/grey_black" android:angle="45"/>
            <corners android:radius="@dimen/bg_corner_radius"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="false" >
        <shape android:shape="rectangle" >
            <gradient android:startColor="@color/white" android:centerColor="@color/colorAccent"  android:endColor="@color/colorAccent" android:angle="45"/>
            <corners android:radius="@dimen/bg_corner_radius"/>
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="rectangle" >
            <gradient android:startColor="@color/grey_black" android:centerColor="@color/grey_black" android:endColor="@color/grey_black" android:angle="45"/>
            <corners android:radius="@dimen/bg_corner_radius"/>
        </shape>
    </item>

</selector>
