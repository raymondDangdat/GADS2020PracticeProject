<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_backgroud"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="25dp"
    android:paddingTop="25dp"
    >
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_cancel"
        android:layout_gravity="end"
        app:tint="@color/grey_black"
        android:layout_marginEnd="10dp"
        android:contentDescription="cancel"
        android:id="@+id/submit_cancel"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure?"
        android:textColor="@color/grey_black"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="@dimen/text_size_large"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textSize="@dimen/text_size_large"
        android:background="@drawable/yes_dialog_background"
        android:id="@+id/submit_yes"
        />
</LinearLayout>